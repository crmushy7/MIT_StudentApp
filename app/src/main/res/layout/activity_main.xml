<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_mod"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/top_login"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moshi Institute of Technology"
                    android:textColor="@color/white"
                    android:padding="40dp"
                    android:textSize="20dp"
                    android:textStyle="bold|normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="40dp"
                android:layout_marginTop="-40dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_layout"
                android:orientation="vertical">
                <!--        Login-->
                <LinearLayout
                    android:id="@+id/login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:textSize="30dp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="16dp"
                            android:textStyle="bold|italic"
                            android:text="Email"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:background="@drawable/loginshape">
                            <EditText
                                android:id="@+id/login_email"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:hint="enter your email"
                                android:textColor="@color/black"
                                android:inputType="textEmailAddress"
                                android:autofillHints="emailAddress"
                                android:maxLines="1"
                                android:backgroundTint="@color/blue"/>
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="16dp"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold|italic"
                            android:text="password"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:background="@drawable/loginshape">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="60sp">
                                <EditText
                                    android:id="@+id/login_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter your password"
                                    android:backgroundTint="@color/blue"
                                    android:textColor="@color/black"
                                    android:padding="10sp"
                                    android:inputType="textPassword"
                                    android:drawablePadding="10sp"
                                    android:fontFamily="sans-serif"
                                    android:tint="@android:color/transparent"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/eye_icon"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="60sp"
                                android:src="@drawable/ic_eye"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/login_donthaveaccl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:textSize="14dp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:textStyle="bold|italic"
                                android:text="Don't have account?SignUp"/>
                            <TextView
                                android:id="@+id/login_forgotpassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:textSize="14dp"
                                android:textAlignment="textEnd"
                                android:layout_weight="1"
                                android:layout_gravity="end"
                                android:textStyle="bold|italic"
                                android:text="Forgot your password?"/>
                        </LinearLayout>

                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:background="@drawable/round_button"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"/>
                </LinearLayout>
                <!--        Register-->
                <LinearLayout
                    android:id="@+id/reg_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:textSize="30dp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="16dp"
                            android:textStyle="bold|italic"
                            android:text="Full Name"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:background="@drawable/loginshape">
                            <EditText
                                android:id="@+id/reg_fullname"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:hint="enter your full name"
                                android:textColor="@color/black"
                                android:inputType="textShortMessage"
                                android:maxLines="1"
                                android:backgroundTint="@color/blue"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="16dp"
                            android:textStyle="bold|italic"
                            android:text="Email"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:background="@drawable/loginshape">
                            <EditText
                                android:id="@+id/reg_email"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:hint="enter your email"
                                android:textColor="@color/black"
                                android:inputType="textEmailAddress"
                                android:autofillHints="emailAddress"
                                android:maxLines="1"
                                android:backgroundTint="@color/blue"/>
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="16dp"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold|italic"
                            android:text="password"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:background="@drawable/loginshape">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="60sp">
                                <EditText
                                    android:id="@+id/reg_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter your password"
                                    android:backgroundTint="@color/blue"
                                    android:textColor="@color/black"
                                    android:padding="10sp"
                                    android:inputType="textPassword"
                                    android:drawablePadding="10sp"
                                    android:fontFamily="sans-serif"
                                    android:tint="@android:color/transparent"/>
                            </LinearLayout>


                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="16dp"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold|italic"
                            android:text="Confirm password"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:background="@drawable/loginshape">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="60sp">
                                <EditText
                                    android:id="@+id/reg_confirmPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="re-enter your password"
                                    android:backgroundTint="@color/blue"
                                    android:textColor="@color/black"
                                    android:padding="10sp"
                                    android:inputType="textPassword"
                                    android:drawablePadding="10sp"
                                    android:fontFamily="sans-serif"
                                    android:tint="@android:color/transparent"/>
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:textSize="14dp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:textStyle="bold|italic"
                                android:text=""/>
                            <TextView
                                android:id="@+id/reg_alreadyHaveAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:textSize="14dp"
                                android:textAlignment="textEnd"
                                android:layout_weight="1"
                                android:layout_gravity="end"
                                android:textStyle="bold|italic"
                                android:text="ALready have account? Login"/>
                        </LinearLayout>

                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/register_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:background="@drawable/round_button"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELP DESK"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+255 767 164 152"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@color/black"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+255 742 170 605"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gidionmushy7@gmail.com"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="V 0.0.1"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
        </LinearLayout>

    </ScrollView>




</LinearLayout>